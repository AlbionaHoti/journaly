{
  "name": "journaly-backend",
  "version": "1.0.0",
  "description": "The backend of Journaly.",
  "repository": {
    "type": "git",
    "url": "git://github.com/Journaly/journaly.git"
  },
  "author": "Journaly",
  "license": "ISC",
  "scripts": {
    "format": "npx prettier --write './**/*.{ts,js,md}'",
    "dev": "nexus dev",
    "build": "nexus build",
    "prisma": "prisma",
    "start": "node node_modules/.build",
    "seed": "ts-node seed.ts",
    "migrate:up": "prisma migrate up --experimental",
    "migrate:save": "prisma migrate save --experimental",
    "debug": "ndb -r ts-node/register node_modules/.bin/nexus dev",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio --experimental"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
